<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GingerTheme" parent="Base.V7.Theme.AppCompat.Light" />

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- design样式 -->
    <style name="Theme.Design.Xuan" parent="Base.Theme.Design.Xuan" />

    <style name="Base.Theme.Design.Xuan" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- menu -->
        <item name="android:textColor">@color/base_white</item><!--浮动菜单字体颜色-->
        <item name="actionMenuTextColor">@color/base_white</item>
        <item name="android:actionMenuTextColor">@color/base_white</item>

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <!-- menu -->
        <!--    系统状态栏透明与app风格颜色一致 -->
        <!--<item name="android:windowTranslucentStatus" >true</item>-->
        <!--<item name="android:windowTranslucentNavigation" >true</item>-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/base_blue</item>
        <!-- 在系统状态栏下面 -->
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!-- App bar 上的标题与更多菜单中的文字颜色。 -->
        <item name="android:textColorPrimary">@color/base_blue</item>
        <!-- Actionbar 的背景色设定在 style 中的 colorPrimary -->
        <item name="colorPrimary">@color/base_blue</item>
        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/base_blue</item>
        <!--<item name="navigationBarColor">@color/base_blue</item> 底部导航栏底色 -->
        <!-- 导航栏的背景色，但只能用在 API Level 21 (Android 5) 以上的版本 -->
        <item name="android:navigationBarColor">@color/base_blue</item>
        <!-- 各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/base_blue</item>
        <!-- 各控制元件的预设颜色 -->
        <item name="colorControlNormal">@color/base_blue</item>
        <!-- App 的背景色 -->
        <item name="android:windowBackground">@color/base_blue </item>
    </style>
</resources>
